" encoding
set encoding=utf-8
set fileencoding=utf-8

" ui & display
set number
set relativenumber
" set cursorline
set showcmd
set showmatch
set termguicolors
set background=dark
syntax on

" tab
set tabstop=4
set shiftwidth=4
set expandtab
set smartindent
set autoindent

" nav
set scrolloff=5
set sidescrolloff=5
set mouse=a
set clipboard=unnamedplus

" behaviour
set confirm

" perfomance
set lazyredraw
set ttyfast

" statusline
set laststatus=3
set ruler
set showmode
