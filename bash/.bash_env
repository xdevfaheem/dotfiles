# ~/.bashenv

# General Environment Variables
export EDITOR="vim"

# Screenshot save directory (https://github.com/Gustash/Hyprshot#save-location)
export HYPRSHOT_DIR="$HOME/pictures/Screenshots"


# fzf (https://github.com/junegunn/fzf)

# Default options to be passed to fzf
export FZF_DEFAULT_OPTS="--height 50% --layout reverse --border top --info right --color bw"

# Command to generate the desired list to be piped to fzf
export FZF_DEFAULT_COMMAND="fd --type f --strip-cwd-prefix --hidden --follow --exclude .git"

